function permAlone(str) {
  let perms = []
  let length = str.length
  let charArray = str.split('')
  console.log(charArray)
  return permutations(length, charArray)

  function permutations(k, charArray) {
    console.log("k is now ", k)
    if (k === 1) {
      return charArray
    }
    permutations(k - 1, charArray);
    for (let i = 0; i < k-1; i++) {
      if (k % 2 === 0) {
        let temp = charArray[k-1]
        charArray[k-1] = charArray[i]
        charArray[i] = temp
      } else {
        let temp = charArray[k-1]
        charArray[k-1] = charArray[0]
        charArray[0] = temp
      }
      permutations(k-1, charArray)
    }
  }

  // loop over permutations, omit from final array if a permutation repeats a char one after the other, leaving aba and aba

  return perms
}
permAlone('aab')
